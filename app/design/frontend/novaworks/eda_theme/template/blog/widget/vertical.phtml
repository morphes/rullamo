		<figure>
			<a class="link-to-post" href="<?php echo $post->getAddress(); ?>">
			<div class="overlay"><div class="thumb-info"><i class="fa fa-file-alt"></i></div></div>
			<img width="420" height="315" alt="<?php echo $post->getTitle(); ?>" src="<?php echo Mage::getBaseUrl('media').$img; ?>" itemprop="image"></a>
		</figure>
