<?php if ($posts = $this->getRecent()): ?>
<div class="row">
	<div class="col-md-12">
		<h4 class="spb_heading">
			<p><?php echo $this->getWidgetTitle(); ?></p>
			<div class="heading-icon"></div>
		</h4>
	</div>
</div>
<ul class="recent-posts row clearfix">
	<?php foreach ($posts as $post): ?>
	<li class="recent-post clearfix" itemscope="">
