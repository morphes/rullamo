                <?php if ($showSheepla && $sConf['advanced']['show_label_at_checkout']): ?>
                    <p>
                        <?php
                        if (isset($sConf['advanced']['custom_label']) && !empty($sConf['advanced']['custom_label'])) {
                            echo $sConf['advanced']['custom_label'];
                        } else {
                            echo $this->__('Robust delivery by Sheepla!');
