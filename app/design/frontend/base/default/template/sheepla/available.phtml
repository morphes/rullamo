                    if ($conf['hidden'] == 0 && $conf['enabled'] == 1) {
                        $temp['sort_' . $conf['sort_order']] = $_rate;
                        $showSheepla = true;
                    }
                }
                ksort($temp);
                $_rates = $temp;
                ?>

