<?xml version="1.0"?>
<config>
    <modules>
        <Novaworks_Vmegamenu>
            <version>0.1.0</version>
        </Novaworks_Vmegamenu>
    </modules>
    <frontend>
        <routers>
            <vmegamenu>
                <use>standard</use>
                <args>
                    <module>Novaworks_Vmegamenu</module>
                    <frontName>vmegamenu</frontName>
                </args>
            </vmegamenu>
        </routers>
        <layout>
            <updates>
                <vmegamenu>
                    <file>vmegamenu.xml</file>
                </vmegamenu>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <vmegamenu>
                <use>admin</use>
                <args>
                    <module>Novaworks_Vmegamenu</module>
                    <frontName>vmegamenu</frontName>
                </args>
            </vmegamenu>
        </routers>
    </admin>
    <adminhtml>
        
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <Novaworks_Vmegamenu>
                            <title>Vmegamenu Module</title>
                            <sort_order>10</sort_order>
                        </Novaworks_Vmegamenu>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <vmegamenu>
                    <file>vmegamenu.xml</file>
                </vmegamenu>
            </updates>
        </layout>
    </adminhtml>   
    <global>
        <models>
            <vmegamenu>
                <class>Novaworks_Vmegamenu_Model</class>
                <resourceModel>vmegamenu_mysql4</resourceModel>
            </vmegamenu>
            <vmegamenu_adminhtml>
                <class>Novaworks_Vmegamenu_Adminhtml_Model</class>
            </vmegamenu_adminhtml>
            <vmegamenu_mysql4>
                <class>Novaworks_Vmegamenu_Model_Mysql4</class>
                <entities>
                    <vmegamenu>
                        <table>vmegamenu</table>
                    </vmegamenu>
                </entities>
            </vmegamenu_mysql4>
        </models>
        <resources>
            <vmegamenu_setup>
                <setup>
                    <module>Novaworks_Vmegamenu</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </vmegamenu_setup>
            <vmegamenu_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </vmegamenu_write>
            <vmegamenu_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </vmegamenu_read>
        </resources>
        <blocks>
            <vmegamenu>
                <class>Novaworks_Vmegamenu_Block</class>
            </vmegamenu>
        </blocks>
        <helpers>
            <vmegamenu>
                <class>Novaworks_Vmegamenu_Helper</class>
            </vmegamenu>
        </helpers>
    </global>
    <default>
        <vmegamenu>
            <general>
                <enabled>1</enabled>
                <title>Categories</title>
                <showhome>0</showhome>
                <leftmenu>0</leftmenu>
                <rightmenu>0</rightmenu>
                <max_level>4</max_level>
            </general>
            <columns>
                <count>4</count>
                <integrate>1</integrate>
            </columns>
            <popup>
                <effect>2</effect>
            </popup>
        </vmegamenu>
    </default>
</config>