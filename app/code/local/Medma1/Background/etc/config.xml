<config>
    <modules>
        <Morphes_Background>
            <version>0.1.0</version>
        </Morphes_Background>
    </modules>
    <frontend>
        <layout>
            <updates>
                <background>
                    <file>background.xml</file>
                </background>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <background>
                <use>admin</use>
                <args>
                    <module>Morphes_Background</module>
                    <frontName>background</frontName>
                </args>
            </background>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <morphes>
                <title>Intex</title>
                <sort_order>79</sort_order>
                <children>	
                    
                    <background translate="title" module="background">
                        <title>Фоновые изображения</title>
                        <action>background/adminhtml_background</action>
                    </background>
                                            
                </children>
            </morphes>	
        </menu>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <background translate="title">
                                    <title>background</title>
                                    <sort_order>1600</sort_order>
                                </background>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <global>
        <models>
            <background>
                <class>Morphes_Background_Model</class>
                <resourceModel>background_mysql4</resourceModel>
            </background>
            <background_mysql4>
                <class>Morphes_Background_Model_Mysql4</class>
                <entities>
                    <background>
                        <table>background_info</table>
                    </background>
                </entities>
            </background_mysql4>
        </models>
        <resources>
            <background_setup>
                <setup>
                    <module>Morphes_Background</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </background_setup>
            <background_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </background_write>
            <background_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </background_read>
        </resources>
        <blocks>
            <background>
                <class>Morphes_Background_Block</class>
            </background>
        </blocks>
        <helpers>
            <background>
                <class>Morphes_Background_Helper</class>
            </background>
        </helpers>
    </global>
	
</config>
