<?xml version="1.0"?>
<config>
    <modules>
        <Morphes_Pay>
            <version>0.1.0</version>
        </Morphes_Pay>
    </modules>
    <frontend>
        <routers>
            <pay>
                <use>standard</use>
                <args>
                    <module>Morphes_Pay</module>
                    <frontName>pay</frontName>
                </args>
            </pay>
        </routers>
        <layout>
            <updates>
                <morphes_pay>
                    <file>pay.xml</file>
                </morphes_pay>
            </updates>
        </layout>
    </frontend> 
    <global>
        <fieldsets>
            <sales_convert_quote_payment>
                <link_sberbank>
                    <to_order_payment>*</to_order_payment>
                </link_sberbank>
            </sales_convert_quote_payment>
        </fieldsets>
        <models>
            <pay>
                <class>Morphes_Pay_Model</class>
                <resourceModel>pay_mysql4</resourceModel>
            </pay>
            <pay_mysql4>
                <class>Morphes_Pay_Model_Mysql4</class>
                <entities>
                    <pay>
                        <table>pay</table>
                    </pay>
                </entities>
            </pay_mysql4>
        </models>
        <resources>
            <pay_setup>
                <setup>
                    <module>Morphes_Pay</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </pay_setup>
            <pay_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </pay_write>
            <pay_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </pay_read>
        </resources>
        <blocks>
            <pay>
                <class>Morphes_Pay_Block</class>
            </pay>
        </blocks>
        <helpers>
            <pay>
                <class>Morphes_Pay_Helper</class>
            </pay>
        </helpers>
    </global>
    <default>
        <payment>
            <pay>
                <active>1</active>
                <model>pay/pay</model>
                <order_status>processing</order_status>
                <title>Morphes Payment Method</title>
            </pay>
        </payment>
    </default>
</config>